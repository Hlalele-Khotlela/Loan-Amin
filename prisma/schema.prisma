enum LoanTransactionType {
  issued        // when loan is created
  repayment     // when payment is made
  interest      // when interest is applied
 
  statusChange  // when loan status changes (e.g. completed)
}
enum LOANTYPE {
  EMERGENCY
  SHORT_TERM
  LONG_TERM
}
enum EmegencyFundTransactionsType{
  deposit
  withdraw
}

enum LoanStatus{
  active
  completed
  inactive
}

enum SavingStatus{
  active
  
  inactive
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  INTEREST
  CREATED
}

enum MemberStatus{
  active
  inactive
}

enum MemberRole{
  Admin
  User
  CreditMember
}
enum SAVINGSTYPE {
  VOLUNTARY
  COMPULSARY
  SPECIAL
  PENSION
  SECURITY
  GROUP
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
 
 
}

model loanrequest {
  applicant  String? @db.VarChar(255)
  amount     Decimal @db.Decimal(12, 2)
  status     String? @db.VarChar(200)
  balance    Int?
  request_id Int     @id @default(autoincrement()) 
  loan_type LOANTYPE  
  member_Id Int
  member    Member @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  
}

model Member {
  firstName String
  lastName  String
  email     String @unique
  gender    String
  phone     String
  member_Id Int    @id @default(autoincrement())
  loanrequest loanrequest[]
  loan  Loan[]
  savings Savings[]
  shares ShareOnCapital[]
  OwnerTransaction OwnerTransaction[]
  groupSavings GroupSaving[] @relation("GroupMembership")
  GroupDeposits GroupDeposit[]
  LoanTransaction LoanTransaction[]
  LoanIntestTransaction LoanIntestTransaction[]
  SavingsTransaction SavingsTransaction[]
  Role MemberRole @default(User)
  Status MemberStatus @default(active)
  JoinedAt DateTime @default(now())

 
  GroupWithdrawal GroupWithdrawal[]
  groupSavingsTransactions GroupSavingsTransaction[]
}

model Loan {

  Principal  Decimal @db.Decimal(12, 2)
  instalments Decimal @db.Decimal(12, 2)
  intrests Decimal @db.Decimal(12, 2)
  loan_type LOANTYPE
  totals_payeable  Decimal @db.Decimal(12, 2)
  balance Decimal @db.Decimal(12, 2)
  loan_id Int  @id @default(autoincrement())
  request_id Int? @unique
  member    Member @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  created_at  DateTime @default(now())
  member_Id Int
  status LoanStatus @default(active)
  transactions LoanTransaction[]
  collectral String
  collectralName1 String
  collectralName2 String
  collectralName3 String
  Loan_Duration Int
  LoanInterest LoanInterest[]
  LoanIntestTransaction LoanIntestTransaction[]
  MinInstament Decimal @db.Decimal(12,2)


}
model GroupSaving{
  group_id  Int @id @default(autoincrement())
  name    String
  savings_type String
  amount Decimal @db.Decimal(12, 2)
  started_at DateTime @default(now())
  deposits  GroupDeposit[]
  withdraw  GroupWithdrawal[]
  total_Savings Decimal @db.Decimal(12, 2) @default(0)
  interest Decimal @db.Decimal(12, 2) @default(0)
  current_total  Decimal    @db.Decimal(12, 2) @default(0)
  min_amount  Decimal @db.Decimal(12, 2) @default(0)
 
   members      Member[]  @relation("GroupMembership")
   transactions  GroupSavingsTransaction[]
}
model Savings{
  member    Member @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  min_amount  Decimal @db.Decimal(12, 2) @default(0)
  amount  Decimal @db.Decimal(12, 2)
  total  Decimal @db.Decimal(12, 2) @default(0)
  status SavingStatus @default(active)
  interest Decimal @db.Decimal(12, 2)
  savings_id Int @id @default(autoincrement())
  savings_type SAVINGSTYPE
  started_at  DateTime @default(now())
  member_Id Int
  OwnerTransaction OwnerTransaction[]
  Owner_Interest Interest [] 
  transactions  SavingsTransaction[]
}
model LoanTransaction {
  id Int @id @default(autoincrement())
  loan_id Int
  type LoanTransactionType
  applied_at DateTime @default(now())
  new_balance Decimal @db.Decimal(12,2) @default(0)
  amount Decimal @db.Decimal(12,2) @default(0)
  member_Id Int?
  member Member? @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)

  loan Loan @relation(fields: [loan_id], references: [loan_id])
}


model SavingsTransaction {
  id          Int      @id @default(autoincrement())
  savings_id  Int
  saving    Savings  @relation(fields: [savings_id], references: [savings_id], onDelete: Cascade)
  member_Id Int?
  member Member? @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  
  amount      Decimal @db.Decimal(12, 2)
  type        TransactionType
  created_at  DateTime @default(now())
}

model OwnerTransaction {
  id          Int      @id @default(autoincrement())
  savings_id  Int
  saving    Savings  @relation(fields: [savings_id], references: [savings_id], onDelete: Cascade)
  member_Id Int?
  member Member? @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  
  amount      Decimal @db.Decimal(12, 2)
  type        String
  Description        String
  created_at  DateTime @default(now())
}

model LoanIntestTransaction {
  id          Int      @id @default(autoincrement())
  loan_id  Int
  loan    Loan  @relation(fields: [loan_id], references: [loan_id], onDelete: Cascade)
  member_Id Int?
  member Member? @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  
  amount      Decimal @db.Decimal(12, 2)
  type        String
  Description        String
  created_at  DateTime @default(now())
}

model GroupDeposit {
  deposit_id   Int        @id @default(autoincrement())
  amount       Decimal    @db.Decimal(12, 2)
  deposited_at DateTime   @default(now())
  member_Id    Int
  group_id     Int

  member       Member     @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  group        GroupSaving @relation(fields: [group_id], references: [group_id])
}

model Interest{
  id Int @id @default(autoincrement())
  member_Id Int?
  group_id Int?
  savings_id Int?
  ownerShare Decimal @db.Decimal(12, 2)
  savings_type SAVINGSTYPE
  created_at  DateTime @default(now())

  savings Savings? @relation(fields: [savings_id], references: [savings_id])

}

model LoanInterest{
  id Int @id @default(autoincrement())
  member_Id Int
  loan_type LOANTYPE
  loan_id Int?
  created_at  DateTime @default(now())
  ownerShare Decimal @db.Decimal(12, 2)
  loan Loan? @relation(fields: [loan_id], references: [loan_id])

}
model ShareOnCapital{
  id Int @id @default(autoincrement())
  member_Id Int
  Current_interest Decimal @db.Decimal(12, 2)
  Accumu_interest Decimal @db.Decimal(12, 2)
  amount Decimal @db.Decimal(12, 2)
  balance Decimal @db.Decimal(12, 2)
  created_at  DateTime @default(now())
  member       Member     @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
}

model Incomes{
  id Int @id @default(autoincrement())
  Description String
  amount Decimal @db.Decimal(12, 2)
  created_at  DateTime @default(now())
}
model Expenses{
  id Int @id @default(autoincrement())
  Description String
  amount Decimal @db.Decimal(12, 2)
  created_at  DateTime @default(now())
}

model GroupWithdrawal {
  withdrawal_id Int      @id @default(autoincrement())
  amount        Decimal   @db.Decimal(12, 2)
  member_Id     Int
  group_id      Int
  created_at    DateTime  @default(now())

  member        Member      @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  group         GroupSaving @relation(fields: [group_id], references: [group_id])
}

model GroupSavingsTransaction {
  Transaction_id          Int      @id @default(autoincrement())
  group_id  Int
  group    GroupSaving  @relation(fields: [group_id], references: [group_id], onDelete: Cascade)
  member_Id Int?
  member        Member?      @relation(fields: [member_Id], references: [member_Id], onDelete: Cascade)
  
  amount      Decimal @db.Decimal(12, 2)
  type        TransactionType
  created_at  DateTime @default(now())
  Description String?
}

model montlyAgg{
  id Int @id @default(autoincrement())
  Total_Earnings Decimal @db.Decimal(12, 2) @default(0)
  LoanInterest Decimal @db.Decimal(12, 2) @default(0)
  MembersImoveable Decimal @db.Decimal(12, 2) @default(0)
  TotalImoveable Decimal @db.Decimal(12, 2) @default(0)
  member_Id Int?
  Incomes Decimal @db.Decimal(12, 2) @default(0)
  Expenses Decimal @db.Decimal(12, 2) @default(0)
  Profits Decimal @db.Decimal(12, 2) @default(0)
  created_at  DateTime @default(now())
}

model EmegencyFund{
  id Int @id @default(autoincrement())
  member_Id Int?
  balance Decimal @db.Decimal(12, 2) @default(0)
  Description String
  deposit Decimal? @db.Decimal(12, 2) @default(0)
  withdrawals Decimal? @db.Decimal(12, 2) @default(0)
  created_at  DateTime @default(now()) @db.Timestamptz(6)

}
model EmegencyFundTransactions{
  id Int @id @default(autoincrement())
  type EmegencyFundTransactionsType
  amount Decimal @db.Decimal(12, 2) @default(0)
  created_at  DateTime @default(now())
}

model Raffles{
  id Int @id @default(autoincrement())
  balance Decimal @db.Decimal(12, 2) @default(0)
  deposit Decimal? @db.Decimal(12, 2) @default(0)
  withdrawals Decimal? @db.Decimal(12, 2) @default(0)
  created_at  DateTime @default(now())

}

model RaffleTransactions{
  id Int @id @default(autoincrement())
  deposit Decimal? @db.Decimal(12, 2) @default(0)
  withdrawals Decimal? @db.Decimal(12, 2) @default(0)
  created_at  DateTime @default(now())
}